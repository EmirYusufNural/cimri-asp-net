@model List<cimri.entity.Description>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body> <table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Text</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
                {
                <tr>
                    
                    <td>@item.Id</td>
                    <td>@item.Text</td>
                   
                    <td>
                        <a asp-controller="cimri" asp-action="DescriptionUpdate"  asp-route-id="@item.Id" class="btn btn-sm btn-info">Güncelle</a>
                        <a asp-controller="cimri" asp-action="DescriptionDelete" asp-route-id="@item.Id"  class="btn btn-sm btn-danger" >Sil</a>                
                    </td>
                </tr>

                }
                 <a asp-controller="cimri" asp-action="DescriptionAdd"  class="btn btn-sm btn-primary" >Özellik ekle</a>                  


    </tbody>
    
</body>
</html>