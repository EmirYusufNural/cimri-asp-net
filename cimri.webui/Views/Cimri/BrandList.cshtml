@model List<cimri.entity.Brand>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <table class="table table-bordered">
            <thead>
                <tr>
                   <th>Marka Adı</th>
                   <th>Kategori</th>
                   <th>Ürün Listesi</th>

                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    
                    <td>@item.BrandName</td>
                    <td></td>
                    <td>
                    <a asp-controller="cimri" asp-action="BrandDetails" asp-route-id="@item.Id" class="btn btn-sm btn-danger" >Detay</a>                
                    </td>
                    <td>
                        <a asp-controller="cimri" asp-action="BrandUpdate"  asp-route-id="@item.Id" class="btn btn-sm btn-info">Güncelle</a>
                        <a asp-controller="cimri" asp-action="BrandDelete" asp-route-id="@item.Id"  class="btn btn-sm btn-danger" >Sil</a>                
                    </td>
                </tr>

                }
                 <a asp-controller="cimri" asp-action="BrandAdd"  class="btn btn-sm btn-primary" >Marka KAYIT</a>                


            </tbody>
        </body>